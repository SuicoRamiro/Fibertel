<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F2F2F4"
    tools:context=".fragments.FacturasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fibertel Networks"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <!-- TextView para mostrar mensaje cuando no hay facturas -->
        <TextView
            android:id="@+id/tv_no_facturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No tienes ninguna factura en este momento"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="center"
            android:textColor="#888888"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFacturas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="76dp"
            tools:listitem="@layout/item_factura"/>

    </LinearLayout>

</FrameLayout>
